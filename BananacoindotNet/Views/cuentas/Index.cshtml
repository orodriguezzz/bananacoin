@model BananacoindotNet.BL.model.BC_CuentaSaldoViewModel
@{
    ViewBag.Title = "Index";
}

<h2>CUENTA</h2>

<div>
    <table class="table table-striped table-bordered">
        <tr>
            <td>
                Dirección
            </td>
            <td>
                @Model.direccion
            </td>
        </tr>
        <tr>
            <td>
                Saldo
            </td>
            <td>
                @Model.saldo
            </td>
        </tr>
    </table>
</div>

<div>
    <table class="table table-striped table-bordered">
        <tr><th>Monto</th><th>Tipo</th><th>Fecha</th></tr>
        @foreach (var item in Model.transacciones)
        {
            <tr>
                <td>@item.monto</td>
                <td>@item.tipoInstruccion</td>
                <td>@item._fechaRegistro</td>
            </tr>
        }
    </table>
</div>
<div>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal-transaccion">
        <i class="glyphicon-plus"></i>&nbsp;Crea transacción
    </button>
</div>

@*MODAL CREA TRANSACCION*@
<div id="modal-transaccion" class="modal" tabindex="-1" role="dialog">
    <div class="modal-transaccion" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Formulario de creación de transacción</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="bc_password">Password</label>
                        <input type="text" class="form-control" id="bc_password" placeholder="Ingrese password">
                    </div>
                    <div class="form-group">
                        <label for="bc_descripcion">Descripción</label>
                        <input type="text" class="form-control" id="bc_descripcion" placeholder="Ingrese descripción">
                    </div>
                    <div class="form-group">
                        <label for="bc_monto">Monto</label>
                        <input type="text" class="form-control" id="bc_monto" placeholder="Ingrese monto">
                    </div>
                    <div class="form-group">
                        <label for="bc_tipoInstruccion">Tipo instrucción</label>
                        <select class="form-control" id="bc_tipoInstruccion">
                            @foreach (var item in Model.tipoTransacciones)
                            {
                                <option value="@item.id">@item.tipoInstruccion</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-save-transaccion" class="btn btn-primary">Guarda transacción</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/cuentas/cuentas.js"></script>
}